<view class="page">
  <view class="page__bd">
    <view class="weui-search-bar">
      <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
          <input type="text" class="weui-search-bar__input" placeholder='输入关键字搜索商品' bindfocus='goToSearchPage'/>
        </view>
      </view>
    </view>
    <scroll-view scroll-x="true" class='brands'>
      <view wx:for="{{brands}}" class="brands-items {{curNav == item.id ? 'active' : ''}}" bindtap="switchTab" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</view>
    </scroll-view>
    <scroll-view scroll-y="true" wx:if="{{brands[curIndex].cateList.length > 0}}" class=''>
      <view class="weui-panel weui-panel_access">
        <view class="weui-panel__bd">
          <navigator wx:for="{{products}}" url="../product/product?productId={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image wx:if="{{item.imageSrc}}" class="weui-media-box__thumb" src="{{item.imageSrc}}"></image>
              <image wx:else src="../../images/defaultCate.jpeg"></image>
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{item.name}}</view>
              <view class="weui-media-box__desc">
              <view class="item_spec_block">
                  <text class="item_spec">{{item.spec}}/{{item.unit}}</text>
              </view>
              <view class='item_price_block'>
                  <text class="item_price">¥ {{item.retailPrice}}</text>
              </view>
              </view>
            </view>
          </navigator>
        </view>
      </view>
    </scroll-view>
    <view class="nodata_text" wx:else>该品牌暂无数据</view>
  </view>
</view>
