/*顶部搜索*/
.top {
  position: relative;
  top: 10px;
  width: 100%;
  height: 40px;
  left: 10px;
  display: flex;
  border-radius: 20px;
  background-color: white;
}

.top .search_btn {
  width: 40px;
  height: 40px;
}

.top .search_btn image {
  width: 100%;
  height: 100%;
}

.top input {
  width: 80%;
  height: 40px;
  background-color: #f0f0f0;
  border-radius: 20px;
  text-align: center;
}

.banner {
  position: relative;
  top: 30rpx;
  width: 100%;
  height: 600rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.down {
  position: relative;
  display: flex;
  flex-direction: column;
  top: 5rpx;
  width: 100%;
  height: 100%;
}

.down_title{
  position: relative;
  width: 100%;
  height: 50rpx;
  top: 10rpx;
  left: 30rpx;
  font-size: 24rpx;
  color: grey;
}

.list {
  display: flex;
  height: 150rpx;
  position: relative;
  width: 100%;
}

