.imgs {
  position: relative;
  float: left;
  width: 200rpx;
  height: 150rpx;
}

.imgs image {
  width: 100%;
  height: 100%;
}

.nav_right {
  display: flex;
  float: right;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  left: 100rpx;
  height: 150rpx;
  width: 550rpx;
}

.nav_right .right_top {
  display: flex;
  position: relative;
  height: 100rpx;
}

.text_name {
  position: relative;
  top: 30rpx;
  height: 100%;
  width: 100%;
  text-align: center;
  font-size: 14px;
}

.nav_right .right_down {
  display: flex;
  position: relative;
  height: 50rpx;
}

.nav_right .right_down left_spec {
  margin-right: 10px;
  bottom: 0;
}

.text_spec {
  font-size: 12px;
  margin-right: 10px;
}

.nav_right .right_down right_price {
  bottom: 0;
}

.text_style {
  color: red;
  font-size: 16px;
  margin-left: 10px;
}


