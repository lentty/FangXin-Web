/**index.wxss**/
/*顶部搜索*/
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}

.weui-cell{
    padding: 12px 15px 12px 35px;
}



.weui-grids {
  background-color: #FFFFFF;
  /* border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9; */
  border: none;
  overflow: hidden;
}

.weui-grid {
  padding: 5px 5px; 
  width: 20%;
  border-style: none;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  width: 100%;
  height: 60px;
}

.weui-media-box__title {
  font-size: 14px;
  position: absolute;
  top: 0px;
  padding: 15px 0px;
}

.item_spec_block{
  position: relative;
  top: 0px;
  padding:5px 0px;
}

.item_spec {
  font-size: 12px;
  border: 1px solid;
  padding: 3px;
  border-radius: 5px;
}

.item_price_block {
  position: absolute;
  bottom: 0px;
  padding:15px 0px;
}

.item_price {
  color:#f0145a;
  font-weight: bold;
  font-size: 14px;
}

.weui-media-box__hd_in-appmsg {
  width: 100px;
  height: 100px;
  padding: 0px 10px;
}

.exploreHeader {
  padding: 10rpx;
  text-align: center;
  position:fixed;
  z-index:99;
  top:0;
  left:0;
  width:100%;
  background:#FFF;
}

.weui-search-bar__box {
  background-color: #ececec;
  border-radius: 12px;
  text-align: center;
}

.exploreHeader .searchInput {
  height: 60rpx;
}
.exploreHeader input {
  border-radius:35rpx;
  border:1px solid #CCC;
  width:90%;
  margin:0 auto;
  background: #ececec;
  color: #000;

}

.page__hd {
  padding: 20px;
}

swiper {
  height: 200px;
  background: #fff;
}

navigator.weui-grid {
  background: #fff;
  color: #fff;
  background-color: #fff;
}

.weui-grid_prod {
  padding: 4px 0px;
  margin: 1% 0% 1% 2%;
  width: 46%;
  height: auto;
  border: 1px solid #ececec;
}
 
.weui-grid__icon_prod {
  display: block;
  width: 80%;
  height: 150px;
  padding: 0 10%;
  margin: 0;
}

.item_spec_prod {
  color: #CCC;
}

.weui-grid__label_prod {
  margin-top: 5px;
  display: block;
  padding: 0 10%;
  text-align: left;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-grids_prod {
  display: flex;
  flex-wrap: wrap;
  background-color: #FFFFFF;
  /* border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9; */
  border: none;
  overflow: hidden;
}

.promoteProd {
  margin: 10px 0px;
  background-color: #FFFFFF;

}
.index_label_view{
 padding-top: 16rpx; 
}

.grids-text {
  padding: 2%;
  color: #4caf50;
  font-size: 16px;
  font-weight: 600;
}
  
  


