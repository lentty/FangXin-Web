.product_list{
    margin-bottom: 100px;    
}
.product_item{
    padding: 10rpx 20rpx;
    margin-bottom: 20rpx;
    background-color: white;
}

/*商品信息*/
.product_msg{
    display: flex;
    padding: 20rpx 0;
    font-size: 30rpx;
    border-top: 1rpx solid #f3f3f3;
}

.checkbox{
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.product_msg .msg_right{
    flex: 1;
}
.product_msg .product_pic{
    width: 200rpx;
    height: 200rpx;
    margin: 0 20rpx;
}
.product_msg .msg_right .num{
    display: flex;
    height: 40rpx;
    width: 60%;
    text-align: center;
    line-height: 40rpx;
    border: 1rpx solid #f3f3f3;
}
.product_msg .msg_right .num .nownum{
    flex: 1;
    border-left: 1rpx solid #f3f3f3;
    border-right: 1rpx solid #f3f3f3;
}
.product_msg .msg_right .disnum,.product_msg .msg_right .addnum{
    width: 40rpx;
}
.product_msg .msg_right .tit{
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.product_msg .msg_right .price{
    color: #ff6662;
    margin: 20rpx 0;
}
.product_msg .msg_right .delete{
    float: right;
    width: 34rpx;
    height: 34rpx;
    margin-top:-34rpx;
    margin-right: 20rpx;
}
.footer{
    display: flex;
    text-align: center;
    padding: 20rpx 20rpx;
    background-color: white;
    position: fixed;
    bottom: 0;
    width: 100%;
    color: #7a7a7a;
}
.footer .btn{
    width: 30%;
    background-color: grey;
    text-align: center;
    color: white;
    font-size: 40rpx;
    line-height: 46px;
    font-weight: 200;
    /*margin:0 40rpx;*/
}
.footer .all_money{
    flex: 1;
    font-size: 30rpx;
}
.footer .all_money view.yf_msg{
    line-height: 30px;
}
.footer .select_all{
    font-size: 32rpx;
    margin-left: 20rpx;
}